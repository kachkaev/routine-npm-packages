{
  "$schema": "./node_modules/markdownlint/schema/markdownlint-config-schema-strict.json",

  "default": true,
  "extends": "markdownlint/style/prettier",

  "first-line-heading": false,
  "list-marker-space": { "ol_multi": 2, "ol_single": 2 },
  "no-alt-text": false,
  "no-bare-urls": false,
  "no-duplicate-heading": { "siblings_only": true },
  "no-inline-html": false,
  "ol-prefix": { "style": "one" }
}
