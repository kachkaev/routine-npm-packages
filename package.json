{
  "private": true,
  "author": {
    "name": "Alexander Kachkaev",
    "email": "alexander@kachkaev.ru",
    "url": "https://en.kachkaev.ru"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/terser"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:eslint": "eslint --fix \"**/*\"",
    "fix:markdownlint": "markdownlint --fix \"**/*\"",
    "fix:prettier": "prettier --write \"**/*\"",
    "fix:yarn-deduplicate": "yarn install && yarn-deduplicate --strategy=fewer && yarn install",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:eslint": "eslint \"**/*\" --report-unused-disable-directives",
    "lint:markdownlint": "markdownlint \"**/*\"",
    "lint:packages": "lerna run lint",
    "lint:prettier": "prettier --check \"**/*\"",
    "lint:yarn-deduplicate": "yarn-deduplicate --fail --list --strategy=fewer",
    "prepare": "husky install",
    "test": "lerna run test"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix",
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": ">=4.4.1",
    "@typescript-eslint/parser": ">=4.4.1",
    "node-notifier": "^8.0.1"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.4.0",
    "@parcel/transformer-react-refresh-wrap": "^2.4.0",
    "@parcel/transformer-typescript-types": "^2.4.0",
    "@types/deasync": "^0.1.2",
    "@types/lodash": "^4.14.180",
    "@types/react": "^17.0.43",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.4.0",
    "prettier": "^2.6.1",
    "react": "^17.0.2",
    "typescript": "^4.6.3",
    "yarn-deduplicate": "^4.0.0"
  },
  "engines": {
    "node": "^12.16.0 || ^14.0.0 || ^16.0.0",
    "yarn": "^1.22.0"
  }
}
