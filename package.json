{
  "private": true,
  "author": {
    "name": "Alexander Kachkaev",
    "email": "alexander@kachkaev.ru",
    "url": "https://en.kachkaev.ru"
  },
  "type": "module",
  "scripts": {
    "build": "lerna run build",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:eslint": "eslint --fix .",
    "fix:markdownlint": "markdownlint --fix .",
    "fix:pnpm-dedupe": "pnpm dedupe",
    "fix:prettier": "prettier --write .",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:eslint": "eslint .",
    "lint:markdownlint": "markdownlint .",
    "lint:packages": "lerna run lint",
    "lint:pnpm-dedupe": "pnpm dedupe --check",
    "lint:prettier": "prettier --check .",
    "prepare": "husky install",
    "test": "lerna run test"
  },
  "lint-staged": {
    "**": [
      "eslint --fix",
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "prettier": "@kachkaev/prettier-config",
  "devDependencies": {
    "eslint": "8.57.1",
    "husky": "9.1.7",
    "lerna": "9.0.0",
    "lint-staged": "16.2.6",
    "markdownlint-cli": "0.45.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2"
  },
  "packageManager": "pnpm@10.20.0"
}
