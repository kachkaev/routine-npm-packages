{
  "name": "@repo/root",
  "private": true,
  "author": {
    "name": "Alexander Kachkaev",
    "email": "alexander@kachkaev.ru",
    "url": "https://en.kachkaev.ru"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm --no-bail --recursive build",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:eslint": "pnpm --no-bail --recursive fix:eslint",
    "fix:knip": "knip --fix --allow-remove-files",
    "fix:manypkg": "manypkg fix",
    "fix:markdownlint": "markdownlint --fix .",
    "fix:pnpm-dedupe": "pnpm dedupe",
    "fix:prettier": "prettier --cache --write \"**/*\"",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:eslint": "pnpm --no-bail --recursive lint:eslint",
    "lint:knip": "knip || echo \"Allowing to fail until migrating to ESLint flat config\"",
    "lint:manypkg": "manypkg check || echo \"Allowing to fail until migrating to ESLint flat config\"",
    "lint:markdownlint": "markdownlint .",
    "lint:pnpm-dedupe": "pnpm dedupe --check",
    "lint:prettier": "prettier --cache --check \"**/*\"",
    "lint:tsc": "pnpm --no-bail --recursive lint:tsc",
    "prepare": "husky",
    "release": "pnpm build && changeset publish",
    "test": "pnpm --no-bail --recursive test"
  },
  "lint-staged": {
    "**": [
      "markdownlint --fix",
      "prettier --write"
    ]
  },
  "prettier": "@kachkaev/prettier-config",
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@changesets/config": "3.1.1",
    "@kachkaev/prettier-config": "workspace:*",
    "@manypkg/cli": "0.25.1",
    "husky": "9.1.7",
    "knip": "5.67.1",
    "lint-staged": "16.2.6",
    "markdownlint-cli": "0.45.0",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2"
  },
  "packageManager": "pnpm@10.20.0"
}
